# ls
if which gls >/dev/null; then
	alias ls="gls -CF --group-directories-first --color=auto"
fi

if which gtail >/dev/null; then
	alias tail="gtail"
fi

# sudo
aliassudo="nocorrect sudo"

# Dictionary
alias dict="dict -d wn"

# GPG
alias gpgo="gpg2 --symmetric --personal-cipher-preferences "AES256""

# RWD thumbnail generator for VanPattenMedia.com
alias vpmrwd="~/.dotfiles/scripts/generate-rwd.sh"
alias t="~/.dotfiles/scripts/tmux.sh"

# Webdev
alias magic="bundle exec guard"
alias launch="sh ~/.dotfiles/ipfw/ipfw.sh"
alias fdns="dscacheutil -flushcache"
alias dnsflush="dscacheutil -flushcache"
alias flushcache="dscacheutil -flushcache"

# Vim
alias vim="mvim"
alias mvim="mvim -fv"
alias vimdiff="mvimdiff -fv"
