# ls
if which gls >/dev/null; then
	alias ls="gls -CF --group-directories-first --color=auto"
fi

if which gtail >/dev/null; then
	alias tail="gtail"
fi

# Dictionary
alias dict="dict -d wn"

# GPG
alias gpg-encrypt="gpg2 --symmetric --personal-cipher-preferences "AES256""
alias gpg-decrypt="gpg2"

# Webdev
alias magic="bundle exec guard"
alias launch="sh ~/.dotfiles/pfctl/pfctl.sh"
alias wpsalts="echo '<?php' > wp-salts.php && curl https://api.wordpress.org/secret-key/1.1/salt >> wp-salts.php"

# Vim
alias vim="mvim"
alias mvim="mvim -fv"
alias vimdiff="mvimdiff -fv"
alias vi="vim"

# Scripts
alias tmux-session="bash ~/.dotfiles/scripts/tmux-session"
